{
  "root": true,
  "env": {
    "node": true,
    "commonjs": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": 12
  },
  "extends": ["airbnb-base", "prettier"],
  "rules": {
    /* =====================
       Code Quality Rules
       ===================== */

    "no-console": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-underscore-dangle": "off",
    "no-return-await": "off",

    /* =====================
       Formatting Rules
       (delegated to Prettier)
       ===================== */

    "indent": "off",
    "comma-dangle": "off",
    "object-curly-newline": "off",
    "implicit-arrow-linebreak": "off",
    "linebreak-style": "off"
  }
}
